<h1><%= @event.name %></h1>

<% if @event.location %>
  <p><%= @event.location.name %></p>
  <p><%= link_to 'Edit', edit_event_location_path(@event) %></p>
  <p><%= link_to 'Delete', event_location_path(@event), method: :delete, date: {confirm: "Sure to delete?"} %></p>
<% else %>
  <p>N/A</p>
  <p><%= link_to 'New location', new_event_location_path(@event) %></p>
<% end %>